<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<parent>
		<artifactId>weasis-openjpeg-parent</artifactId>
		<groupId>org.weasis.openjpeg</groupId>
		<version>2.6.1-SNAPSHOT</version>
		<relativePath>../weasis-openjpeg-parent/pom.xml</relativePath>
	</parent>
	<modelVersion>4.0.0</modelVersion>
	<packaging>bundle</packaging>
	<artifactId>weasis-openjpeg-codec-macosx-x86-64</artifactId>
	<name>openjpeg native Mac amd64 codec</name>
	<!-- version must match to the parent property ${weasis.openjpeg.native.version} -->
	<version>2.2.0</version>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.felix</groupId>
				<artifactId>maven-bundle-plugin</artifactId>
				<configuration>
					<instructions>
						<Bundle-NativeCode>lib/libjniopenjpeg.jnilib; processor=x86-64; osname=MacOSX</Bundle-NativeCode>
						<Fragment-Host>weasis-openjpeg-codec;bundle-version="2.5"</Fragment-Host>
						<Embed-StripVersion>true</Embed-StripVersion>
						<!-- Do not inline native libs -->
						<Embed-Dependency>*;scope=compile;inline=false</Embed-Dependency>
					</instructions>
				</configuration>
			</plugin>
		</plugins>
	</build>
	
	<dependencies>
		<dependency>
			<groupId>org.weasis.thirdparty.openjpeg</groupId>
			<artifactId>libjniopenjpeg</artifactId>
			<version>${project.version}</version>
			<type>jnilib</type>
			<classifier>macosx-x86-64</classifier>
			<scope>compile</scope>
		</dependency>
	</dependencies>
</project>
